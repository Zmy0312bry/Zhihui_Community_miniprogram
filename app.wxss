/**app.wxss**/
/* 引入全局渐变主题样式 */
@import "styles/theme-gradient.wxss";

/* 全局页面样式 */
page {
  background: linear-gradient(135deg, #FFFDE7 0%, #FFF9C4 50%, #FFF59D 100%);
  min-height: 100vh;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
  background: transparent;
}

/* 全局按钮样式 */
button {
  background: linear-gradient(135deg, #FFE082 0%, #FFCC02 100%);
  border: none;
  border-radius: 12rpx;
  color: #5D4037;
  font-weight: 600;
  box-shadow: 0 4rpx 16rpx rgba(255, 204, 2, 0.3);
  transition: all 0.3s ease;
}

button:active {
  background: linear-gradient(135deg, #FFD54F 0%, #FFB300 100%);
  box-shadow: 0 2rpx 12rpx rgba(255, 179, 0, 0.5);
  transform: translateY(2rpx);
}

/* 全局输入框样式 */
input, textarea {
  background: linear-gradient(135deg, #FFFDE7 0%, #FFF8E1 100%);
  border: 2rpx solid rgba(255, 235, 59, 0.4);
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

input:focus, textarea:focus {
  border-color: rgba(255, 193, 7, 0.8);
  box-shadow: 0 0 0 4rpx rgba(255, 235, 59, 0.2);
}

/* 全局卡片样式 */
.card {
  background: linear-gradient(135deg, #FFFDE7 0%, #FFF9C4 100%);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(255, 193, 7, 0.15);
  border: 1rpx solid rgba(255, 235, 59, 0.3);
  padding: 32rpx;
  margin: 16rpx;
}

/* 导航相关样式 */
.nav-bar {
  background: linear-gradient(135deg, #FFF59D 0%, #FFEB3B 100%);
}

/* 选中状态样式 */
.selected {
  background: linear-gradient(135deg, #FFE082 0%, #FFCC02 100%);
  color: #5D4037;
} 
