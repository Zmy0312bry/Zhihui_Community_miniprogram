.container {
  padding: 20rpx;
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f8f8f8;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
}

.content {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex: 1;
}

.placeholder-text {
  font-size: 32rpx;
  color: #999;
}