/* 橙色暖色调主题样式 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: linear-gradient(135deg, #FFF8F0 0%, #FFFFFF 100%);
}

/* 页面头部样式 */
.header {
  position: relative;
  height: 200rpx;
  overflow: hidden;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #FF6B35 0%, #FF8C42 50%, #FFA366 100%);
  border-radius: 0 0 40rpx 40rpx;
}

.header-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.circle-1 {
  width: 120rpx;
  height: 120rpx;
  top: -60rpx;
  right: -60rpx;
}

.circle-2 {
  width: 80rpx;
  height: 80rpx;
  top: 40rpx;
  right: 100rpx;
}

.circle-3 {
  width: 60rpx;
  height: 60rpx;
  bottom: -30rpx;
  left: 80rpx;
}

.header-content {
  position: relative;
  z-index: 2;
  padding: 60rpx 40rpx 40rpx 40rpx;
  text-align: center;
}

.title-section {
  text-align: center;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 内容区域 */
.content {
  flex: 1;
  padding: 30rpx 20rpx;
}

/* 通用板块样式 */
.tips-section, .advice-section, .cpr-section, .alzheimer-section {
  margin-bottom: 30rpx;
  background: white;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 25rpx rgba(255, 107, 53, 0.15);
  overflow: hidden;
  border: 2rpx solid transparent;
}

.tips-section:active, .advice-section:active, .cpr-section:active, .alzheimer-section:active {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 35rpx rgba(255, 107, 53, 0.25);
  border-color: rgba(255, 107, 53, 0.3);
}

/* 板块头部 */
.section-header {
  display: flex;
  align-items: center;
  padding: 25rpx 30rpx;
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.05) 0%, rgba(255, 140, 66, 0.05) 100%);
  border-bottom: 1rpx solid rgba(255, 107, 53, 0.1);
}

.section-header .van-icon {
  margin-right: 15rpx;
  flex-shrink: 0;
}

.section-title {
  font-size: 32rpx;
  color: #FF6B35;
  font-weight: bold;
  flex: 1;
}

.section-title {
  font-size: 32rpx;
  color: #FF6B35;
  font-weight: bold;
}

/* 心肺复苏指导样式 */

/* CPR 选项卡 */
.cpr-tabs {
  display: flex;
  flex-wrap: wrap;
  gap: 15rpx;
  padding: 25rpx 30rpx;
  background: #f9f9f9;
}

.cpr-tab {
  flex: 1;
  min-width: 150rpx;
  padding: 15rpx 20rpx;
  background: white;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  text-align: center;
  cursor: pointer;
  transition: all 0.3s ease;
}

.cpr-tab:active {
  transform: scale(0.98);
}

.cpr-tab.active {
  background: linear-gradient(135deg, #FF6B35 0%, #FF8C42 100%);
  border-color: #FF6B35;
}

.tab-label {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
}

.cpr-tab.active .tab-label {
  color: white;
}

/* CPR 图片卡片显示 */
.cpr-card-display {
  padding: 0 30rpx 25rpx 30rpx;
}

.cpr-card {
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.02) 0%, rgba(255, 140, 66, 0.02) 100%);
  border-radius: 15rpx;
  padding: 20rpx;
  border: 1rpx solid rgba(255, 107, 53, 0.1);
  transition: all 0.3s ease;
}

.cpr-card:active {
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.05) 0%, rgba(255, 140, 66, 0.05) 100%);
  transform: scale(0.98);
}

.cpr-image-container {
  width: 100%;
  height: 400rpx;
  border-radius: 15rpx;
  overflow: hidden;
  margin-bottom: 15rpx;
  box-shadow: 0 4rpx 15rpx rgba(255, 107, 53, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f8f8f8;
  position: relative;
  cursor: pointer;
}

.image-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.cpr-image-container:active .image-overlay {
  opacity: 1;
}

.overlay-text {
  color: white;
  font-size: 24rpx;
  margin-top: 10rpx;
}

.cpr-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
  transition: transform 0.3s ease;
}

.cpr-card:active .cpr-image {
  transform: scale(1.02);
}

.cpr-info {
  text-align: center;
}

.cpr-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.cpr-desc {
  display: block;
  font-size: 26rpx;
  color: #FF6B35;
  font-weight: 600;
}

/* 阿尔茨海默症板块样式 */
.alzheimer-card {
  padding: 30rpx;
  display: flex;
  align-items: center;
  cursor: pointer;
}

.alzheimer-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #FF6B35, #FF8C42);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 25rpx;
  flex-shrink: 0;
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 53, 0.3);
}

.alzheimer-info {
  flex: 1;
}

.alzheimer-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  line-height: 1.4;
}

.alzheimer-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 15rpx;
  line-height: 1.4;
}

.alzheimer-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.meta-text {
  font-size: 26rpx;
  color: #FF6B35;
  font-weight: 600;
}

.alzheimer-meta .van-icon {
  margin-left: 10rpx;
}

/* 图片预览样式 */
.image-viewer {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.9);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.viewer-image {
  max-width: 90vw;
  max-height: 80vh;
  object-fit: contain;
  border-radius: 20rpx;
  transition: transform 0.3s ease;
}

.viewer-title {
  margin-top: 20rpx;
  color: white;
  font-size: 32rpx;
  text-align: center;
  font-weight: bold;
}

/* 缩放百分比显示 */
.zoom-text {
  margin-top: 30rpx;
  color: #FF6B35;
  font-size: 28rpx;
  font-weight: bold;
  background-color: rgba(255, 255, 255, 0.9);
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  text-align: center;
}

/* 双指缩放提示 (CPR) */
.pinch-tip {
  position: fixed;
  bottom: 80rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  gap: 12rpx;
  background-color: rgba(255, 255, 255, 0.95);
  padding: 16rpx 28rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.3);
  animation: slideUp 0.4s ease;
}

.pinch-tip .tip-label {
  font-size: 26rpx;
  color: #FF6B35;
  font-weight: 600;
}

/* 双指缩放提示 (阿尔茨海默症) */
.alzheimer-pinch-tip {
  position: absolute;
  bottom: 30rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  align-items: center;
  gap: 12rpx;
  background-color: rgba(255, 255, 255, 0.95);
  padding: 16rpx 28rpx;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.3);
  animation: slideUp 0.4s ease;
}

.alzheimer-pinch-tip .tip-label {
  font-size: 26rpx;
  color: #FF6B35;
  font-weight: 600;
}

@keyframes slideUp {
  from {
    opacity: 0;
    transform: translateX(-50%) translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateX(-50%) translateY(0);
  }
}

/* 阿尔茨海默症幻灯片预览样式 */
.alzheimer-viewer {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.95);
  display: flex;
  flex-direction: column;
  z-index: 9999;
}

.alzheimer-viewer-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.9) 0%, rgba(255, 140, 66, 0.9) 100%);
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
}

.back-btn {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  border-radius: 25rpx;
  background: rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.back-btn:active, .back-btn-hover {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.back-btn .van-icon {
  margin-right: 8rpx;
}

.back-text {
  color: white;
  font-size: 28rpx;
  font-weight: 600;
}

.viewer-title-section {
  flex: 1;
  text-align: center;
}

.viewer-title {
  display: block;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 5rpx;
}

.viewer-page-info {
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
}

.alzheimer-viewer-content {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  overflow: hidden;
  position: relative;
}

.alzheimer-image {
  width: 100%;
  height: 100%;
  object-fit: contain;
  border-radius: 15rpx;
  transition: transform 0.3s ease;
}

/* 左右导航箭头按钮 */
.nav-prev, .nav-next {
  position: absolute;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: rgba(255, 107, 53, 0.3);
  border: 2rpx solid rgba(255, 107, 53, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  z-index: 100;
}

.nav-prev {
  left: 30rpx;
}

.nav-next {
  right: 30rpx;
}

.nav-prev:active:not(:disabled), .nav-next:active:not(:disabled) {
  background: rgba(255, 107, 53, 0.5);
  transform: scale(0.95);
}

.nav-prev:disabled, .nav-next:disabled {
  opacity: 0.3;
  cursor: not-allowed;
}

.alzheimer-controls {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 40rpx;
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.9) 0%, rgba(255, 140, 66, 0.9) 100%);
  border-top: 1rpx solid rgba(255, 255, 255, 0.2);
}

.nav-btn {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  border: 2rpx solid rgba(255, 255, 255, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.nav-btn:active:not(:disabled) {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.nav-btn:disabled {
  opacity: 0.5;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .cpr-tab {
    min-width: 120rpx;
    font-size: 24rpx;
  }

  .cpr-image-container {
    height: 350rpx;
  }

  .alzheimer-card {
    padding: 25rpx;
  }

  .alzheimer-icon {
    width: 80rpx;
    height: 80rpx;
  }

  .alzheimer-title {
    font-size: 30rpx;
  }
}

