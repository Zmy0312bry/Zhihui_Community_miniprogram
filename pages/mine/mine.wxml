            <!--                <button class="ui-btn block bg-brown-gradient shadow shadow-blue" bindtap="cancelLogin">退出登录</button>-->
        </view>
        <view wx:if="{{!isAuth}}">
            <button class="ui-btn block bg-red-gradient shadow" bindtap="setLogin">登录失败
            </button>
        </view>

    </view>
</view>
