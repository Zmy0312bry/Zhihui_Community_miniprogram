        <van-dialog
            id="van-dialog"
            use-slot
            title="截图扫码关注"
            show="{{ show }}"
            bind:close="onClose"
            showConfirmButton="false"
        >
            <image src="/static/img/gzh.jpg"/>
        </van-dialog>

        <van-dialog
            id="van-dialog-theme"
            use-slot
            title=""
            show="{{ showThemeList }}"
            close-on-click-overlay = "true"
            customStyle="background-color:{{ backgroundColor }}"
        >
            <view class="theme-button-content">
                <block wx:for="{{ themeList }}" wx:key="color">
                    <van-button
                        bind:click="changeTheme"
                        data-theme="{{ item.name }}"
                        color="{{ item.backgroundColor }}"
                        customStyle="color:{{ item.textColor }}"
                    >{{ item.text }}
                    </van-button>
                </block>
            </view>

        </van-dialog>

    </view>

