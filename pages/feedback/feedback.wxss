/* 容器样式 */
.container {
    min-height: 100vh;
    background-color: #f8f8f8;
    display: flex;
    flex-direction: column;
}

/* 页面头部样式 */
.header {
    position: relative;
    overflow: hidden;
}

.header-top {
    background: linear-gradient(135deg, #FF6B35 0%, #FF8C42 50%, #FFA366 100%);
    padding: 70rpx 30rpx 20rpx 30rpx;
    display: flex;
    align-items: center;
    z-index: 10;
    position: relative;
}

.back-btn {
    display: flex;
    align-items: center;
    padding: 15rpx 20rpx;
    border-radius: 25rpx;
    background: rgba(255, 255, 255, 0.2);
    transition: all 0.3s ease;
}

.back-btn:active,
.back-btn-hover {
    background: rgba(255, 255, 255, 0.3);
    transform: scale(0.95);
}

.back-text {
    font-size: 28rpx;
    color: white;
    font-weight: 600;
    margin-left: 8rpx;
}

.header-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, #FF6B35 0%, #FF8C42 50%, #FFA366 100%);
    border-radius: 0 0 40rpx 40rpx;
}

.header-decoration {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
}

.decoration-circle {
    position: absolute;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
}

.circle-1 {
    width: 120rpx;
    height: 120rpx;
    top: -60rpx;
    right: -60rpx;
}

.circle-2 {
    width: 80rpx;
    height: 80rpx;
    top: 40rpx;
    right: 100rpx;
}

.circle-3 {
    width: 60rpx;
    height: 60rpx;
    bottom: -30rpx;
    left: 80rpx;
}

.header-content {
    position: relative;
    z-index: 2;
    padding: 40rpx 40rpx 60rpx 40rpx;
    text-align: center;
    min-height: 160rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.title {
    display: block;
    font-size: 40rpx;
    font-weight: bold;
    color: white;
    margin-bottom: 10rpx;
    text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.subtitle {
    display: block;
    font-size: 28rpx;
    color: rgba(255, 255, 255, 0.9);
    text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 反馈表单样式 */
.feedback-container {
    flex: 1;
    padding: 30rpx 20rpx;
    display: flex;
    flex-direction: column;
}

.feedback-section {
    background: white;
    border-radius: 20rpx;
    margin-bottom: 25rpx;
    padding: 30rpx;
    box-shadow: 0 4rpx 20rpx rgba(255, 107, 53, 0.1);
}

.section-title {
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
}

.section-title .van-icon {
    margin-right: 12rpx;
    flex-shrink: 0;
}

/* 反馈类型样式 */
.feedback-types {
    display: flex;
    gap: 30rpx;
}

.feedback-types van-radio {
    flex: 1;
}

/* 输入框样式 */
.feedback-content {
    min-height: 200rpx;
}

.contact-field {
    height: auto;
}

/* 提交按钮区域 */
.submit-section {
    padding: 30rpx 20rpx;
    margin-top: auto;
}

.submit-section van-button {
    font-size: 32rpx;
}
