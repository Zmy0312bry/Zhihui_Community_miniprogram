/* 橙色暖色调主题样式 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: linear-gradient(135deg, #FFF8F0 0%, #FFFFFF 100%);
}

/* 页面头部样式 */
.header {
  position: relative;
  height: 200rpx;
  overflow: hidden;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #FF6B35 0%, #FF8C42 50%, #FFA366 100%);
  border-radius: 0 0 40rpx 40rpx;
}

.header-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.circle-1 {
  width: 120rpx;
  height: 120rpx;
  top: -60rpx;
  right: -60rpx;
}

.circle-2 {
  width: 80rpx;
  height: 80rpx;
  top: 40rpx;
  right: 100rpx;
}

.circle-3 {
  width: 60rpx;
  height: 60rpx;
  bottom: -30rpx;
  left: 80rpx;
}

.header-content {
  position: relative;
  z-index: 2;
  padding: 60rpx 40rpx 40rpx 40rpx;
  text-align: center;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 政策分类样式 */
.policy-categories {
  flex: 1;
  padding: 30rpx 20rpx;
}

.category-section {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 25rpx;
  box-shadow: 0 8rpx 25rpx rgba(255, 107, 53, 0.15);
  overflow: hidden;
}

.category-header {
  display: flex;
  align-items: center;
  padding: 30rpx 25rpx;
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.05) 0%, rgba(255, 140, 66, 0.05) 100%);
  border-bottom: 1rpx solid rgba(255, 107, 53, 0.1);
  transition: all 0.3s ease;
}

.category-header:active {
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.08) 0%, rgba(255, 140, 66, 0.08) 100%);
}

.category-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #FF6B35, #FF8C42);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.3);
}

.category-info {
  flex: 1;
}

.category-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.category-desc {
  display: block;
  font-size: 26rpx;
  color: #FF6B35;
  font-weight: 500;
}

.expand-icon {
  margin-left: 15rpx;
  transition: transform 0.3s ease;
}

.category-content {
  padding: 0;
  background: rgba(255, 107, 53, 0.02);
}

.policy-item {
  display: flex;
  align-items: center;
  padding: 25rpx 25rpx;
  border-bottom: 1rpx solid rgba(255, 107, 53, 0.08);
  transition: all 0.3s ease;
}

.policy-item:last-child {
  border-bottom: none;
}

.policy-item:active {
  background: rgba(255, 107, 53, 0.05);
  transform: translateX(5rpx);
}

.item-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: rgba(255, 140, 66, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 15rpx;
  flex-shrink: 0;
}

.item-content {
  flex: 1;
}

.item-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
  line-height: 1.3;
}

.item-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.2;
}

.item-arrow {
  margin-left: 10rpx;
  opacity: 0.6;
}

/* PDF预览区域 */
.pdf-viewer {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: white;
  z-index: 1000;
  display: flex;
  flex-direction: column;
}

.viewer-header {
  display: flex;
  align-items: center;
  padding: 20rpx 25rpx;
  background: linear-gradient(135deg, #FF6B35, #FF8C42);
  box-shadow: 0 4rpx 15rpx rgba(255, 107, 53, 0.3);
  position: relative;
  z-index: 1001;
}

.viewer-title-section {
  flex: 1;
}

.viewer-title {
  font-size: 32rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  margin-left: 20rpx;
}

.close-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.9);
}

.viewer-content {
  flex: 1;
  position: relative;
  background: #f5f5f5;
}

.pdf-webview {
  width: 100%;
  height: 100%;
}

/* 底部操作栏 */
.viewer-footer {
  background: linear-gradient(135deg, #FF6B35, #FF8C42);
  padding: 20rpx 25rpx;
  box-shadow: 0 -4rpx 15rpx rgba(255, 107, 53, 0.3);
  position: relative;
  z-index: 1001;
}

.footer-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 30rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 25rpx;
  transition: all 0.3s ease;
}

.footer-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: translateY(-2rpx);
}

.footer-btn .van-icon {
  margin-right: 10rpx;
}

.footer-btn-text {
  font-size: 28rpx;
  font-weight: 600;
  color: white;
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* 底部提示 */
.footer-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 40rpx;
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.05) 0%, rgba(255, 140, 66, 0.05) 100%);
  margin: 0 20rpx 20rpx 20rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(255, 107, 53, 0.1);
}

.footer-tip .van-icon {
  margin-right: 12rpx;
  flex-shrink: 0;
}

.tip-text {
  font-size: 26rpx;
  color: #FF6B35;
  text-align: center;
  line-height: 1.4;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .category-title {
    font-size: 30rpx;
  }

  .item-title {
    font-size: 26rpx;
  }

  .item-desc {
    font-size: 22rpx;
  }
}
