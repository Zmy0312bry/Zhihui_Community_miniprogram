/* 橙色暖色调主题样式 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: linear-gradient(135deg, #FFF8F0 0%, #FFFFFF 100%);
}

/* 页面头部样式 */
.header {
  position: relative;
  height: 200rpx;
  overflow: hidden;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, #FF6B35 0%, #FF8C42 50%, #FFA366 100%);
  border-radius: 0 0 40rpx 40rpx;
}

.header-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  overflow: hidden;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.circle-1 {
  width: 120rpx;
  height: 120rpx;
  top: -60rpx;
  right: -60rpx;
}

.circle-2 {
  width: 80rpx;
  height: 80rpx;
  top: 40rpx;
  right: 100rpx;
}

.circle-3 {
  width: 60rpx;
  height: 60rpx;
  bottom: -30rpx;
  left: 80rpx;
}

.header-content {
  position: relative;
  z-index: 2;
  padding: 60rpx 40rpx 40rpx 40rpx;
  text-align: center;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 政策分类样式 */
.policy-categories {
  flex: 1;
  padding: 30rpx 20rpx;
}

.category-section {
  background: white;
  border-radius: 20rpx;
  margin-bottom: 25rpx;
  box-shadow: 0 8rpx 25rpx rgba(255, 107, 53, 0.15);
  overflow: hidden;
}

.category-header {
  display: flex;
  align-items: center;
  padding: 30rpx 25rpx;
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.05) 0%, rgba(255, 140, 66, 0.05) 100%);
  border-bottom: 1rpx solid rgba(255, 107, 53, 0.1);
  transition: all 0.3s ease;
}

.category-header:active {
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.08) 0%, rgba(255, 140, 66, 0.08) 100%);
}

.category-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #FF6B35, #FF8C42);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.3);
}

.category-info {
  flex: 1;
}

.category-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 6rpx;
}

.category-desc {
  display: block;
  font-size: 26rpx;
  color: #FF6B35;
  font-weight: 500;
}

.expand-icon {
  margin-left: 15rpx;
  transition: transform 0.3s ease;
}

.category-content {
  padding: 0;
  background: rgba(255, 107, 53, 0.02);
}

.policy-item {
  display: flex;
  align-items: center;
  padding: 25rpx 25rpx;
  border-bottom: 1rpx solid rgba(255, 107, 53, 0.08);
  transition: all 0.3s ease;
}

.policy-item:last-child {
  border-bottom: none;
}

.policy-item:active {
  background: rgba(255, 107, 53, 0.05);
  transform: translateX(5rpx);
}

.item-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: rgba(255, 140, 66, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 15rpx;
  flex-shrink: 0;
}

.item-content {
  flex: 1;
}

.item-title {
  display: block;
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 4rpx;
  line-height: 1.3;
}

.item-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
  line-height: 1.2;
}

.item-arrow {
  margin-left: 10rpx;
  opacity: 0.6;
}

/* ===== 快速链接样式 ===== */
.quick-link-divider {
  height: 1rpx;
  background: linear-gradient(to right, transparent, rgba(255, 107, 53, 0.2), transparent);
  margin: 20rpx 25rpx;
}

.quick-link-item {
  display: flex;
  align-items: center;
  padding: 20rpx 25rpx;
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.06) 0%, rgba(255, 140, 66, 0.06) 100%);
  border: 1rpx solid rgba(255, 107, 53, 0.15);
  border-radius: 12rpx;
  margin: 0 15rpx 15rpx 15rpx;
  transition: all 0.3s ease;
}

.quick-link-item:active {
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.12) 0%, rgba(255, 140, 66, 0.12) 100%);
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.15);
}

.quick-link-icon {
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: rgba(255, 107, 53, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 15rpx;
  flex-shrink: 0;
}

.quick-link-content {
  flex: 1;
}

.quick-link-title {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #FF6B35;
  margin-bottom: 4rpx;
}

.quick-link-desc {
  display: block;
  font-size: 22rpx;
  color: #999;
}

.quick-link-arrow {
  margin-left: 10rpx;
  opacity: 0.8;
}

/* ===== 补贴专栏样式 ===== */
.subsidy-section {
  margin: 15rpx 15rpx 0 15rpx;
  border: 1rpx solid rgba(255, 107, 53, 0.2);
  border-radius: 12rpx;
  background: rgba(255, 255, 255, 0.8);
  overflow: hidden;
}

.subsidy-header {
  display: flex;
  align-items: center;
  padding: 18rpx 20rpx;
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.08) 0%, rgba(255, 140, 66, 0.08) 100%);
  border-bottom: 1rpx solid rgba(255, 107, 53, 0.1);
  transition: all 0.3s ease;
}

.subsidy-header:active {
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.12) 0%, rgba(255, 140, 66, 0.12) 100%);
}

.subsidy-icon {
  width: 36rpx;
  height: 36rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.subsidy-info {
  flex: 1;
}

.subsidy-title {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 2rpx;
}

.subsidy-desc {
  display: block;
  font-size: 22rpx;
  color: #999;
}

.subsidy-expand-icon {
  margin-left: 8rpx;
  opacity: 0.7;
  transition: transform 0.3s ease;
}

/* 补贴项目列表 */
.subsidy-list {
  padding: 12rpx 0;
}

.subsidy-item {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  border-bottom: 1rpx solid rgba(255, 107, 53, 0.06);
  transition: all 0.3s ease;
}

.subsidy-item:last-child {
  border-bottom: none;
}

.subsidy-item:active {
  background: rgba(255, 107, 53, 0.04);
  padding-left: 24rpx;
}

.subsidy-item-icon {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 12rpx;
  flex-shrink: 0;
  opacity: 0.7;
}

.subsidy-item-content {
  flex: 1;
}

.subsidy-item-title {
  display: block;
  font-size: 24rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 2rpx;
  line-height: 1.3;
}

.subsidy-item-desc {
  display: block;
  font-size: 22rpx;
  color: #999;
  line-height: 1.2;
}

.subsidy-item-arrow {
  margin-left: 8rpx;
  opacity: 0.5;
}

/* PDF预览区域 */
.image-viewer-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.7);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.image-viewer {
  width: 100%;
  height: 100%;
  background: #f0f0f0; /* 更改为浅灰色，更接近PDF阅读器背景 */
  border-radius: 0;
  overflow: hidden;
  box-shadow: 0 10rpx 40rpx rgba(0, 0, 0, 0.3);
  display: flex;
  flex-direction: column;
}

.viewer-header {
  display: flex;
  align-items: center;
  padding: 24rpx 25rpx;
  background: linear-gradient(135deg, #FF6B35, #FF8C42);
  box-shadow: 0 4rpx 15rpx rgba(255, 107, 53, 0.3);
  position: relative;
  z-index: 1001;
}

.viewer-title-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.viewer-title {
  font-size: 30rpx;
  font-weight: bold;
  color: white;
  text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
  /* allow title to wrap onto multiple lines */
  overflow: visible;
  text-overflow: unset;
  white-space: normal;
  word-break: break-word;
  line-height: 1.2;
}

.viewer-page-info {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-top: 4rpx;
}

.back-btn {
  display: flex;
  align-items: center;
  padding: 12rpx 24rpx;
  background: rgba(0, 0, 0, 0.2);
  border-radius: 30rpx;
  transition: all 0.2s ease;
  margin-right: 20rpx;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.back-btn-hover,
.back-btn:active {
  background: rgba(0, 0, 0, 0.3);
  transform: scale(0.95);
}

.back-text {
  color: white;
  font-size: 26rpx;
  margin-left: 8rpx;
  font-weight: bold;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  line-height: 34rpx; /* spacing between the two characters */
}

/* ===== 相关链接栏样式 ===== */
.related-link-bar {
  background: white;
  border-bottom: 1rpx solid rgba(255, 107, 53, 0.15);
  padding: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.related-link-content {
  display: flex;
  align-items: center;
  padding: 16rpx 20rpx;
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.08) 0%, rgba(255, 140, 66, 0.08) 100%);
  border: 1rpx solid rgba(255, 107, 53, 0.15);
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.related-link-content:active {
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.12) 0%, rgba(255, 140, 66, 0.12) 100%);
  transform: translateY(-2rpx);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.15);
}

.related-link-icon {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: rgba(255, 107, 53, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  margin-right: 12rpx;
}

.related-link-text {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.related-link-title {
  display: block;
  font-size: 26rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.3;
}

.related-link-arrow {
  display: block;
  font-size: 22rpx;
  color: #FF6B35;
  font-weight: 500;
}

/* ===== PDF预览器重构样式 ===== */

.pdf-viewer-scroll {
  flex: 1;
  position: relative;
  background: #f5f5f5;
  width: 100%;
  height: calc(100% - 88rpx);
  box-sizing: border-box;
}

.pdf-container {
  padding: 20rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100%;
}

.pdf-page-wrapper {
  position: relative;
  width: 100%;
  margin-bottom: 24rpx;
  background: white;
  border-radius: 8rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  overflow: visible;
}

.page-indicator {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: rgba(255, 107, 53, 0.9);
  color: white;
  font-size: 24rpx;
  font-weight: 600;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  z-index: 1000;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  pointer-events: none;
  backdrop-filter: blur(4rpx);
}

.pdf-image-container {
  position: relative;
  width: 100%;
  padding: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: visible;
  touch-action: manipulation;
}

.pdf-image {
  max-width: 100%;
  height: auto;
  display: block;
  border-radius: 6rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.15);
  background: white;
  transition: transform 0.2s cubic-bezier(0.25, 0.8, 0.25, 1);
  will-change: transform;
  -webkit-user-drag: none;
  user-drag: none;
}

.loading-indicator {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 120rpx;
  width: 100%;
  margin: 20rpx 0;
}

.document-end {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
  width: 100%;
  font-size: 28rpx;
}

/* ===== 保留原有样式（用于福利栏目）===== */

.viewer-content {
  flex: 1;
  position: relative;
  background: #f5f5f5;
  overflow-y: scroll;
  -webkit-overflow-scrolling: touch;
  width: 100%;
  height: calc(100% - 88rpx);
  box-sizing: border-box;
  touch-action: pan-y;
  -webkit-touch-callout: none;
  -webkit-user-select: none;
  -moz-user-select: none;
  -ms-user-select: none;
  user-select: none;
}

.care-assessment-viewer {
  scroll-behavior: smooth;
}

.image-container {
  padding: 0;
  min-height: 100%;
  touch-action: inherit;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.care-assessment-container {
  padding: 0;
  min-height: 100%;
  display: flex;
  flex-direction: column;
  align-items: stretch;
  width: 100%;
}

.image-wrapper {
  width: 100%;
  margin-bottom: 12rpx;
  background: white;
  overflow: visible;
  position: relative;
  transform-origin: center top;
}

.care-assessment-page {
  width: 100%;
  margin-bottom: 12rpx;
  background: white;
  overflow: visible;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: flex-start;
  box-sizing: border-box;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}

.pdf-page {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #f0f0f0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
  padding: 24rpx 0;
  box-sizing: border-box;
  position: relative;
  min-height: 400rpx;
  transition: all 0.3s ease;
}

.care-assessment-page-number {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: rgba(255, 107, 53, 0.9);
  color: white;
  font-size: 22rpx;
  padding: 8rpx 16rpx;
  border-radius: 30rpx;
  z-index: 100;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.3);
  opacity: 1;
  pointer-events: none;
  font-weight: 600;
}

.page-number {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background: rgba(255, 107, 53, 0.8);
  color: white;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 30rpx;
  z-index: 2;
  box-shadow: 0 2rpx 6rpx rgba(0,0,0,0.2);
  opacity: 0.9;
}

.image-zoom-container {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: visible;
  position: relative;
  z-index: 20;
  touch-action: manipulation;
  pointer-events: auto;
}

.care-assessment-zoom-container {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: visible;
  position: relative;
  z-index: 10;
  touch-action: manipulation;
  pointer-events: auto;
}

.care-assessment-image {
  width: auto;
  transform-origin: center center;
  display: block;
  will-change: transform;
  background-color: white;
  box-shadow: 0 4rpx 30rpx rgba(0, 0, 0, 0.25);
  -webkit-user-drag: none;
  user-drag: none;
  border-radius: 4rpx;
  pointer-events: auto;
  touch-action: none;
}

.loading-more {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 120rpx;
  width: 100%;
  background: white;
}

.end-of-document {
  text-align: center;
  color: #999;
  padding: 40rpx 0;
  width: 100%;
  font-size: 24rpx;
  background: white;
}

.image-controls {
  padding: 16rpx;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  flex-direction: column;
  align-items: center;
  border-top: 1px solid #e0e0e0;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 1002;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.scale-info {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 4rpx;
}

.zoom-tips {
  display: flex;
  align-items: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: #FF6B35;
  font-weight: 600;
  animation: slideIn 0.4s ease;
}

.zoom-tips .tip-label {
  font-size: 24rpx;
  color: #FF6B35;
  font-weight: 600;
}

@keyframes slideIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 已移除悬浮返回按钮样式 */

/* 分类提示 */
.category-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 30rpx 20rpx;
  margin: 20rpx 0;
  background: rgba(255, 140, 66, 0.08);
  border-radius: 12rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}

.category-tip .van-icon {
  margin-right: 12rpx;
  flex-shrink: 0;
}

.category-tip .tip-text {
  font-size: 26rpx;
  color: #FF8C42;
  font-weight: 500;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .category-title {
    font-size: 30rpx;
  }

  .item-title {
    font-size: 26rpx;
  }

  .item-desc {
    font-size: 22rpx;
  }
}
