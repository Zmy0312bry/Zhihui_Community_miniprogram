/* 页面容器 */
.container {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
  background: linear-gradient(135deg, #FFF8F0 0%, #FFFFFF 100%);
}

/* 内容包装器 */
.content-wrapper {
  flex: 1;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  overflow-y: auto;
}

/* 页面头部 */
.header {
  position: relative;
  padding: 40rpx 30rpx;
  background: linear-gradient(135deg, #FF6B35, #FF8C42);
  overflow: hidden;
}

.header-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(45deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
}

.header-decoration {
  position: absolute;
  top: 0;
  right: 0;
  width: 200rpx;
  height: 200rpx;
}

.decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}

.circle-1 {
  width: 120rpx;
  height: 120rpx;
  top: 20rpx;
  right: 20rpx;
}

.circle-2 {
  width: 80rpx;
  height: 80rpx;
  top: 60rpx;
  right: 60rpx;
}

.circle-3 {
  width: 40rpx;
  height: 40rpx;
  top: 100rpx;
  right: 100rpx;
}

.header-content {
  position: relative;
  z-index: 1;
  text-align: center;
  color: white;
}

.title {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.subtitle {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

/* 地图卡片样式 */
.map-card {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 53, 0.1);
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
}

.map-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 53, 0.2);
}

.card-header {
  padding: 24rpx 20rpx;
  background: linear-gradient(135deg, rgba(255, 107, 53, 0.05), rgba(255, 140, 66, 0.05));
  display: flex;
  align-items: center;
  justify-content: center;
}

.card-body {
  padding: 20rpx 24rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.card-title {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.card-desc {
  display: block;
  font-size: 26rpx;
  color: #999;
}

.card-thumbnail {
  width: 100%;
  height: 240rpx;
  overflow: hidden;
  background: #f5f5f5;
}

.card-thumbnail image {
  width: 100%;
  height: 100%;
  display: block;
}

.card-footer {
  padding: 20rpx 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(90deg, rgba(255, 107, 53, 0.05), transparent);
  border-top: 1rpx solid rgba(255, 107, 53, 0.1);
}

.footer-text {
  font-size: 26rpx;
  color: #FF6B35;
  font-weight: 600;
}

/* 底部提示 */
.footer-tip {
  padding: 30rpx;
  background: white;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #666;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .header {
    padding: 30rpx 20rpx;
  }

  .title {
    font-size: 36rpx;
  }

  .subtitle {
    font-size: 24rpx;
  }

  .content-wrapper {
    padding: 20rpx;
    gap: 16rpx;
  }

  .card-title {
    font-size: 28rpx;
  }

  .card-desc {
    font-size: 24rpx;
  }

  .card-thumbnail {
    height: 200rpx;
  }
}
