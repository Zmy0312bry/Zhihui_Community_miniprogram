<view class="container">
    <!-- 页面头部 -->
    <view class="header">
        <view class="header-bg">
            <view class="header-decoration">
                <view class="decoration-circle circle-1"></view>
                <view class="decoration-circle circle-2"></view>
                <view class="decoration-circle circle-3"></view>
            </view>
        </view>
        <view class="header-content">
            <text class="title">服务地图</text>
            <text class="subtitle">上地街道分布图</text>
        </view>
    </view>

    <!-- 地图展示区域 -->
    <view class="map-container">
        <view class="map-header">
            <view class="map-title-section">
                <van-icon name="location-o" size="32rpx" color="#FF6B35"/>
                <text class="map-title">上地街道服务分布</text>
            </view>
            <view class="map-info">
                <text class="map-desc">点击查看详细位置和服务信息</text>
            </view>
        </view>

        <view class="map-content">
            <scroll-view scroll-x="{{true}}" scroll-y="{{true}}" class="map-scroll">
                <view class="map-wrapper"
                      bindtouchstart="handleTouchStart"
                      bindtouchmove="handleTouchMove"
                      bindtouchend="handleTouchEnd"
                      bindtouchcancel="handleTouchEnd">
                    <image
                        src="{{mapImageUrl}}"
                        class="service-map"
                        mode="widthFix"
                        bindload="onMapLoad"
                        binderror="onMapError"
                        bindtap="onMapTap"
                        style="transform: scale({{scale}}); transform-origin: center center; transition: transform 0.3s ease;"
                    />
                </view>
            </scroll-view>
        </view>

        <!-- 缩放功能：双指缩放 + 重置按钮 -->
        <view class="zoom-controls-horizontal">
            <view class="zoom-btn zoom-reset" bindtap="resetZoom">
                <van-icon name="replay" size="24rpx" color="#4CAF50"/>
                <text class="zoom-text">重置</text>
            </view>
        </view>
    </view>

    <!-- 底部提示 -->
    <view class="footer-tip">
        <van-icon name="info-o" size="28rpx" color="#FF6B35"/>
        <text class="tip-text">使用双指进行地图缩放，点击重置按钮恢复默认大小</text>
    </view>
</view>
