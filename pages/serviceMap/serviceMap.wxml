<view class="container">
    <!-- 页面头部 -->
    <view class="header">
        <!-- 返回按钮 -->
        <view class="header-top">
            <view class="back-btn" bindtap="goBack" hover-class="back-btn-hover">
                <van-icon name="arrow-left" size="36rpx" color="#FFFFFF"/>
                <text class="back-text">返回</text>
            </view>
        </view>

        <view class="header-bg">
            <view class="header-decoration">
                <view class="decoration-circle circle-1"></view>
                <view class="decoration-circle circle-2"></view>
                <view class="decoration-circle circle-3"></view>
            </view>
        </view>
        <view class="header-content">
            <text class="title">服务地图</text>
            <text class="subtitle">上地街道分布查询</text>
        </view>
    </view>

    <!-- 地图栏目列表 -->
    <view class="content-wrapper">
        <!-- 第一个栏目 - 服务分布图 -->
        <view class="map-card" bindtap="navigateToMapDetail" data-mapid="1">
            <view class="card-header">
                <van-icon name="location-o" size="36rpx" color="#FF6B35"/>
            </view>
            <view class="card-body">
                <text class="card-title">{{map1.title}}</text>
                <text class="card-desc">{{map1.desc}}</text>
            </view>
            <view class="card-thumbnail">
                <image 
                    src="{{map1.thumbnailUrl}}" 
                    mode="aspectFill"
                    lazy-load="true"
                />
            </view>
            <view class="card-footer">
                <text class="footer-text">点击查看详情</text>
                <van-icon name="arrow" size="24rpx" color="#FF6B35"/>
            </view>
        </view>

        <!-- 第二个栏目 - 服务名录 -->
        <view class="map-card" bindtap="navigateToMapDetail" data-mapid="2">
            <view class="card-header">
                <van-icon name="orders-o" size="36rpx" color="#FF6B35"/>
            </view>
            <view class="card-body">
                <text class="card-title">{{map2.title}}</text>
                <text class="card-desc">{{map2.desc}}</text>
            </view>
            <view class="card-thumbnail">
                <image 
                    src="{{map2.thumbnailUrl}}" 
                    mode="aspectFill"
                    lazy-load="true"
                />
            </view>
            <view class="card-footer">
                <text class="footer-text">点击查看详情</text>
                <van-icon name="arrow" size="24rpx" color="#FF6B35"/>
            </view>
        </view>
    </view>

    <!-- 底部提示 -->
    <view class="footer-tip">
        <van-icon name="info-o" size="28rpx" color="#FF6B35"/>
        <text class="tip-text">点击栏目卡片进入图片预览，双指缩放查看细节</text>
    </view>
</view>
