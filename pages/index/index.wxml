<view class="container">
    <!-- 轮播图 -->
    <view class="swiper-container">
        <swiper class="swiper" autoplay="{{true}}" interval="{{3000}}" duration="{{500}}" circular="{{true}}" indicator-dots="{{true}}" indicator-color="rgba(255,255,255,0.5)" indicator-active-color="#ffffff">
            <swiper-item wx:for="{{bannerList}}" wx:key="index">
                <image src="{{item}}" class="banner-image" mode="aspectFill"></image>
            </swiper-item>
        </swiper>
    </view>

    <!-- 滚动提示 -->
    <view class="scroll-notice">
        <text class="scroll-text">欢迎使用上地小e养老ai助手</text>
    </view>

    <!-- 九个功能入口 -->
    <view class="function-grid">
        <view class="function-item bg-blue-gradient" bindtap="goAiChat">
            <van-icon name="comment" size="80rpx" color="white" class="function-icon"></van-icon>
            <text class="function-text">AI聊天</text>
        </view>
        <view class="function-item bg-green-gradient" bindtap="goPolicies">
            <van-icon name="description" size="80rpx" color="white" class="function-icon"></van-icon>
            <text class="function-text">政策法规</text>
        </view>
        <view class="function-item bg-orange-gradient" bindtap="goContactCommunity">
            <van-icon name="phone" size="80rpx" color="white" class="function-icon"></van-icon>
            <text class="function-text">联系社区</text>
        </view>
        <view class="function-item bg-purple-gradient" bindtap="goServiceMap">
            <van-icon name="map-marked" size="80rpx" color="white" class="function-icon"></van-icon>
            <text class="function-text">服务地图</text>
        </view>
        <view class="function-item bg-red-gradient" bindtap="goElderlyMeals">
            <van-icon name="shop-collect" size="80rpx" color="white" class="function-icon"></van-icon>
            <text class="function-text">养老用餐</text>
        </view>
        <view class="function-item bg-teal-gradient" bindtap="goHealthGuidance">
            <van-icon name="medal" size="80rpx" color="white" class="function-icon"></van-icon>
            <text class="function-text">健康指导</text>
        </view>
        <view class="function-item bg-pink-gradient" bindtap="goHealthCenter">
            <van-icon name="like" size="80rpx" color="white" class="function-icon"></van-icon>
            <text class="function-text">卫生服务中心</text>
        </view>
        <view class="function-item bg-indigo-gradient" bindtap="goFeedback">
            <van-icon name="records" size="80rpx" color="white" class="function-icon"></van-icon>
            <text class="function-text">意见反馈</text>
        </view>
        <view class="function-item bg-yellow-gradient" bindtap="showMore">
            <van-icon name="ellipsis" size="80rpx" color="white" class="function-icon"></van-icon>
            <text class="function-text">更多</text>
        </view>
    </view>

    <!-- 装饰分割线 -->
    <view class="decoration-divider">
        <view class="divider-line"></view>
        <view class="divider-icon">✨</view>
        <view class="divider-line"></view>
    </view>

</view>
