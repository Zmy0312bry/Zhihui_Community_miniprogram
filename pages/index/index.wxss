/* ColorUI 图标字体 */
@font-face {
    font-family: 'colorui';
    src: url('data:application/x-font-woff2;charset=utf-8;base64,') format('woff2');
}

[class*='_icon-'] {
    font-family: 'colorui', serif !important;
    display: inline-block;
}

._icon-info:before {
    content: "\e6ef";
}

._icon-home:before {
    content: "\e70d";
}

._icon-title:before {
    content: "\e82f";
}

._icon-check-round:before {
    content: "\e6f1";
}

.container {
    display: flex;
    flex-direction: column;
    width: 100%;
    padding-bottom: 40rpx;
    background: linear-gradient(135deg, #FFF8F0 0%, #FFFFFF 100%);
    min-height: 100vh;
    animation: fadeInUp 0.8s ease-out;
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30rpx);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* 轮播图样式 */
.swiper-container {
    width: calc(100% - 20rpx);
    height: 350rpx;
    margin: 10rpx auto 20rpx auto;
    border-radius: 25rpx;
    overflow: hidden;
    box-shadow: 0 15rpx 40rpx rgba(255, 152, 0, 0.15);
    position: relative;
    animation: fadeInUp 0.8s ease-out 0.4s both;
}

.swiper-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, rgba(255, 152, 0, 0.1) 0%, rgba(255, 187, 77, 0.1) 100%);
    pointer-events: none;
    z-index: 1;
}

.swiper {
    width: 100%;
    height: 100%;
    border-radius: 25rpx;
}

.banner-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 25rpx;
}

/* 滚动提示样式 */
.scroll-notice {
    width: calc(100% - 30rpx);
    height: 70rpx;
    background: linear-gradient(135deg, #FF9800 0%, #FFB74D 50%, #FF9800 100%);
    background-size: 200% 100%;
    animation: gradient-shift 3s ease-in-out infinite, fadeInUp 0.8s ease-out 0.6s both;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 15rpx 40rpx 15rpx;
    border-radius: 35rpx;
    box-shadow: 0 8rpx 25rpx rgba(255, 152, 0, 0.3);
    overflow: hidden;
    position: relative;
}

.scroll-notice::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
    animation: shimmer 2s infinite;
}

@keyframes gradient-shift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
}

@keyframes shimmer {
    0% { left: -100%; }
    100% { left: 100%; }
}

.scroll-text {
    color: white;
    font-size: 30rpx;
    font-weight: bold;
    white-space: nowrap;
    animation: scroll-left 15s linear infinite;
    text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
    position: relative;
    z-index: 2;
}

@keyframes scroll-left {
    0% {
        transform: translateX(100%);
    }
    100% {
        transform: translateX(-100%);
    }
}

/* 九个功能入口样式 */
.function-grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 20rpx;
    padding: 0 15rpx;
    margin-bottom: 10rpx;
    animation: fadeInUp 0.8s ease-out 0.8s both;
}

.function-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    border-radius: 20rpx;
    padding: 40rpx 15rpx;
    box-shadow: 0 12rpx 35rpx rgba(255, 152, 0, 0.15);
    transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    min-height: 160rpx;
    position: relative;
    overflow: hidden;
    background-size: 200% 200%;
    animation: float 6s ease-in-out infinite;
    cursor: pointer;
}

.function-item::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.3) 0%, transparent 70%);
    transform: translate(-50%, -50%);
    transition: all 0.6s ease;
    border-radius: 50%;
    pointer-events: none;
}

.function-item:active::after {
    width: 300rpx;
    height: 300rpx;
}

.function-item::before {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: linear-gradient(45deg, rgba(255, 255, 255, 0.1) 0%, transparent 50%, rgba(255, 255, 255, 0.1) 100%);
    transform: rotate(45deg);
    transition: all 0.6s ease;
    opacity: 0;
}

.function-item:hover::before,
.function-item:active::before {
    opacity: 1;
    animation: shine 1.5s ease-in-out;
}

@keyframes shine {
    0% { transform: translateX(-100%) translateY(-100%) rotate(45deg); }
    100% { transform: translateX(100%) translateY(100%) rotate(45deg); }
}

@keyframes float {
    0%, 100% { transform: translateY(0rpx); }
    50% { transform: translateY(-10rpx); }
}

.function-item:active {
    transform: scale(0.95) translateY(5rpx);
    box-shadow: 0 8rpx 20rpx rgba(255, 152, 0, 0.25);
}

.function-icon {
    margin-bottom: 25rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 2;
    filter: drop-shadow(0 4rpx 8rpx rgba(0, 0, 0, 0.2));
}

/* 确保van-icon在function-icon内正确显示 */
.function-icon .van-icon {
    font-size: 85rpx !important;
    color: white !important;
    transition: all 0.3s ease;
}

.function-item:active .function-icon .van-icon {
    transform: scale(1.1);
}

.function-text {
    font-size: 32rpx;
    color: white;
    font-weight: bold;
    text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.4);
    position: relative;
    z-index: 2;
    letter-spacing: 1rpx;
}

/* 装饰分割线样式 */
.decoration-divider {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0rpx 15rpx 20rpx 15rpx;
    opacity: 0.7;
    animation: fadeInUp 0.8s ease-out 1.2s both;
}

.divider-line {
    flex: 1;
    height: 2rpx;
    background: linear-gradient(90deg, transparent 0%, #FF9800 50%, transparent 100%);
    border-radius: 1rpx;
}

.divider-icon {
    margin: 0 30rpx;
    font-size: 36rpx;
    color: #FF9800;
    animation: pulse 2s ease-in-out infinite;
}

@keyframes pulse {
    0%, 100% { transform: scale(1); opacity: 0.7; }
    50% { transform: scale(1.2); opacity: 1; }
}


.logo-image {
    max-width: 400rpx;
    max-height: 200rpx;
    opacity: 0.85;
    transition: all 0.4s ease;
    border-radius: 15rpx;
    box-shadow: 0 8rpx 25rpx rgba(255, 152, 0, 0.15);
}

.logo-image:hover {
    opacity: 1;
    transform: scale(1.05);
}