.container {
    min-height: 100vh;
    background-color: #f8f8f8;
}

.header {
    background-color: white;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

/* 温馨提示样式 */
.notice-banner {
    background: linear-gradient(135deg, #FFF5F0 0%, #FFF8F5 100%);
    margin: 0 20rpx 20rpx 20rpx;
    border-radius: 15rpx;
    border: 2rpx solid rgba(255, 107, 53, 0.2);
    box-shadow: 0 4rpx 15rpx rgba(255, 107, 53, 0.1);
}

.notice-content {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 25rpx 30rpx;
}

.notice-content .van-icon {
    margin-right: 12rpx;
    flex-shrink: 0;
}

.notice-text {
    font-size: 28rpx;
    color: #FF6B35;
    font-weight: 600;
    text-align: center;
    line-height: 1.4;
}

.community-selector {
    background-color: white;
    margin-bottom: 20rpx;
}

/* 就餐信息样式 */
.info-section {
    margin: 0 20rpx 20rpx 20rpx;
}

.info-card {
    background-color: white;
    border-radius: 20rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
    margin-bottom: 20rpx;
    overflow: hidden;
}

.info-header {
    display: flex;
    align-items: center;
    padding: 25rpx 30rpx;
    background: linear-gradient(135deg, rgba(255, 107, 53, 0.05) 0%, rgba(255, 140, 66, 0.05) 100%);
    border-bottom: 1rpx solid rgba(255, 107, 53, 0.1);
}

.info-header .van-icon {
    margin-right: 15rpx;
    flex-shrink: 0;
}

.info-title {
    font-size: 32rpx;
    color: #FF6B35;
    font-weight: bold;
}

.info-content {
    padding: 25rpx 30rpx;
}

.info-content .info-text {
    font-size: 28rpx;
    color: #555;
    line-height: 1.6;
    text-align: justify;
}

.menu-list {
    padding: 30rpx;
}

.menu-date {
    font-size: 32rpx;
    color: #333;
    font-weight: bold;
    text-align: center;
    margin-bottom: 30rpx;
    padding: 20rpx;
    background-color: white;
    border-radius: 20rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 分类样式 */
.category {
    background-color: white;
    margin-bottom: 20rpx;
    border-radius: 20rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
    overflow: hidden;
}

.category-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 30rpx;
    border-bottom: 1rpx solid #f0f0f0;
}

.category-title {
    font-size: 32rpx;
    color: #333;
    font-weight: bold;
}

.category-content {
    padding: 30rpx;
}

.menu-image {
    width: 100%;
    height: 400rpx; /* 2:1 比例 */
    border-radius: 20rpx;
    object-fit: cover;
    transition: all 0.3s ease;
}

.menu-image:active {
    transform: scale(0.98);
}

/* 图片预览样式 */
.image-viewer {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    background-color: rgba(0, 0, 0, 0.8);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 9999;
}

.viewer-image {
    max-width: 90vw;
    max-height: 80vh;
    object-fit: contain;
    border-radius: 20rpx;
    transition: transform 0.3s ease;
}

.viewer-title {
    margin-top: 20rpx;
    color: white;
    font-size: 32rpx;
    text-align: center;
    font-weight: bold;
}

/* 缩放控制 */
.zoom-controls {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 30rpx;
    gap: 20rpx;
}

.zoom-btn {
    width: 80rpx;
    height: 80rpx;
    border-radius: 50%;
    background-color: rgba(255, 107, 53, 0.8);
    color: #fff;
    font-size: 36rpx;
    font-weight: bold;
    border: 2rpx solid rgba(255, 107, 53, 1);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
}

.zoom-btn:active {
    background-color: rgba(255, 107, 53, 1);
    transform: scale(0.95);
}

.zoom-text {
    color: #FF6B35;
    font-size: 28rpx;
    font-weight: bold;
    min-width: 100rpx;
    text-align: center;
}
