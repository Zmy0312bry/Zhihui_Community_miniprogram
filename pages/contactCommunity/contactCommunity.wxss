.container {
    min-height: 100vh;
    background-color: #f8f8f8;
    display: flex;
    flex-direction: column;
}

.header {
    position: relative;
    overflow: hidden;
}

.header-top {
    background: linear-gradient(135deg, #FF6B35 0%, #FF8C42 50%, #FFA366 100%);
    padding: 70rpx 30rpx 20rpx 30rpx;
    display: flex;
    align-items: center;
    z-index: 10;
    position: relative;
}

.back-btn {
    display: flex;
    align-items: center;
    gap: 8rpx;
    padding: 10rpx 0;
}

.back-text {
    font-size: 28rpx;
    color: white;
    font-weight: 500;
}

.header-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, #FF6B35 0%, #FF8C42 50%, #FFA366 100%);
    border-radius: 0 0 40rpx 40rpx;
}

.header-decoration {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
}

.decoration-circle {
    position: absolute;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.1);
}

.circle-1 {
    width: 120rpx;
    height: 120rpx;
    top: -60rpx;
    right: -60rpx;
}

.circle-2 {
    width: 80rpx;
    height: 80rpx;
    top: 40rpx;
    right: 100rpx;
}

.circle-3 {
    width: 60rpx;
    height: 60rpx;
    bottom: -30rpx;
    left: 80rpx;
}

.header-content {
    position: relative;
    z-index: 2;
    padding: 40rpx 40rpx 60rpx 40rpx;
    text-align: center;
    min-height: 160rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.title {
    display: block;
    font-size: 40rpx;
    font-weight: bold;
    color: white;
    margin-bottom: 10rpx;
    text-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

.subtitle {
    display: block;
    font-size: 28rpx;
    color: rgba(255, 255, 255, 0.9);
    text-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.2);
}

/* 社区列表容器 */
.community-list {
    padding: 30rpx;
}

.list-container {
    display: flex;
    flex-direction: column;
}

/* 社区卡片 */
.community-card {
    background-color: white;
    border-radius: 20rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
    overflow: hidden;
    transition: all 0.3s ease;
}

.community-card:active {
    transform: translateY(-2rpx);
    box-shadow: 0 6rpx 25rpx rgba(0, 0, 0, 0.15);
}

.card-header {
    display: flex;
    align-items: center;
    padding: 30rpx;
    background: linear-gradient(135deg, rgba(255, 107, 53, 0.08) 0%, rgba(255, 140, 66, 0.08) 100%);
    border-bottom: 1rpx solid rgba(255, 107, 53, 0.1);
}

.card-icon {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    background: linear-gradient(135deg, #FF6B35 0%, #FF8C42 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 20rpx;
    flex-shrink: 0;
}

.card-title-section {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.card-title {
    display: block;
    font-size: 32rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 8rpx;
    line-height: 1.3;
}

.card-address {
    display: block;
    font-size: 26rpx;
    color: #999;
    line-height: 1.2;
}

/* 卡片内容 */
.card-content {
    padding: 25rpx 30rpx;
}

.info-item {
    display: flex;
    align-items: center;
    font-size: 28rpx;
}

.info-item .van-icon {
    margin-right: 12rpx;
    flex-shrink: 0;
}

.info-label {
    color: #666;
    margin-right: 8rpx;
}

.info-text {
    color: #333;
    font-weight: 500;
}

.phone-text {
    color: #FF6B35;
}

/* 卡片底部操作按钮 */
.card-footer {
    display: flex;
    padding: 0;
}

.action-btn {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 25rpx;
    background: linear-gradient(135deg, #FF6B35 0%, #FF8C42 100%);
    color: white;
    transition: all 0.3s ease;
}

.action-btn:active {
    opacity: 0.9;
}

.action-btn .van-icon {
    margin-right: 8rpx;
}

.btn-text {
    font-size: 28rpx;
    font-weight: 600;
    color: white;
}

/* 底部提示 */
.footer-tip {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 30rpx 20rpx;
    margin: 0 20rpx 20rpx 20rpx;
    background: rgba(255, 140, 66, 0.08);
    border-radius: 12rpx;
}

.footer-tip .van-icon {
    margin-right: 12rpx;
    flex-shrink: 0;
}

.footer-tip .tip-text {
    font-size: 26rpx;
    color: #FF8C42;
    font-weight: 500;
}
