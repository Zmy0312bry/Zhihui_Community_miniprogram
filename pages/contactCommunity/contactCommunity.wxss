.container {
    min-height: 100vh;
    background-color: #f8f8f8;
}

.header {
    background-color: white;
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.community-list {
    padding: 30rpx;
}

.community-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: white;
    border-radius: 20rpx;
    padding: 40rpx 30rpx;
    margin-bottom: 20rpx;
    box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
    transition: all 0.3s ease;
}

.community-item:active {
    transform: scale(0.98);
    box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.15);
}

.community-info {
    flex: 1;
    display: flex;
    flex-direction: column;
}

.community-name {
    font-size: 32rpx;
    color: #333;
    font-weight: bold;
    margin-bottom: 10rpx;
}

.community-address {
    font-size: 26rpx;
    color: #666;
    margin-bottom: 8rpx;
}

.community-phone {
    font-size: 28rpx;
    color: #2979ff;
    font-weight: 500;
}

.phone-icon {
    font-size: 48rpx;
    color: #2979ff;
}
