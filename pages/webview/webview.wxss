/* 容器样式 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: #F5F5F5;
}

/* 头部样式 */
.header {
  height: 60rpx;
  background: linear-gradient(135deg, #FF6B35 0%, #FF8C42 100%);
  display: flex;
  align-items: center;
  padding: 10rpx 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.2);
  position: relative;
  z-index: 10;
}

/* 返回按钮 */
.back-btn {
  display: flex;
  align-items: center;
  padding: 15rpx 20rpx;
  border-radius: 25rpx;
  background: rgba(255, 255, 255, 0.2);
  transition: all 0.3s ease;
}

.back-btn:active,
.back-btn-hover {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.95);
}

.back-text {
  color: white;
  font-size: 28rpx;
  margin-left: 8rpx;
  font-weight: 600;
}

/* 加载状态容器 */
.loading-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  background: white;
}

.loading-text {
  font-size: 26rpx;
  color: #666;
  margin-top: 10rpx;
}

/* Web 视图 */
.webview-element {
  flex: 1;
  width: 100%;
  height: 100%;
}

/* 响应式设计 */
@media (prefers-reduced-motion: reduce) {
  .back-btn {
    transition: none;
  }
}
