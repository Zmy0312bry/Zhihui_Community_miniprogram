/* 页面容器 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(135deg, #FFF8F0 0%, #FFFFFF 100%);
}

/* 页面头部 */
.header {
  background: linear-gradient(135deg, #FF6B35, #FF8C42);
  padding: 24rpx 30rpx;
  color: white;
}

.header-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.header-top {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 20rpx;
}

.back-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  transition: all 0.3s ease;
}

.back-btn:active {
  background: rgba(255, 255, 255, 0.4);
  transform: scale(0.9);
}

.header-title {
  flex: 1;
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.header-desc {
  font-size: 26rpx;
  opacity: 0.9;
  text-align: center;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.2);
}

/* 加载状态 */
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.95);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 24rpx;
  z-index: 100;
}

.loading-text {
  font-size: 28rpx;
  color: #FF6B35;
  font-weight: 600;
}

/* 地图查看器 */
.map-viewer {
  flex: 1;
  display: flex;
  flex-direction: column;
  background: #f5f5f5;
  overflow: hidden;
  position: relative;
}

.map-content {
  flex: 1;
  position: relative;
  overflow: hidden;
}

.map-scroll {
  width: 100%;
  height: 100%;
  position: relative;
}

.map-wrapper {
  position: relative;
  min-width: 100%;
  min-height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  touch-action: manipulation;
  pointer-events: auto;
  padding: 30rpx;
  box-sizing: border-box;
}

.map-image {
  border-radius: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
  -webkit-user-drag: none;
  -khtml-user-drag: none;
  -moz-user-drag: none;
  -o-user-drag: none;
  user-drag: none;
  will-change: transform;
  object-fit: contain;
  flex-shrink: 0;
}

/* 缩放控制区 */
.scale-control {
  position: absolute;
  top: 24rpx;
  right: 24rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  z-index: 100;
}

.scale-display {
  background: rgba(0, 0, 0, 0.5);
  padding: 12rpx 20rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.scale-text {
  color: white;
  font-size: 28rpx;
  font-weight: 700;
  min-width: 60rpx;
  text-align: center;
}

.reset-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 56rpx;
  height: 56rpx;
  background: linear-gradient(135deg, #FF6B35, #FF8C42);
  border-radius: 50%;
  transition: all 0.3s ease;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.3);
}

.reset-btn:active {
  transform: scale(0.9);
  box-shadow: 0 2rpx 6rpx rgba(255, 107, 53, 0.5);
}

/* 底部提示 */
.footer-tip {
  padding: 24rpx 30rpx;
  background: white;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  font-size: 26rpx;
  color: #666;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .header {
    padding: 20rpx;
  }

  .header-title {
    font-size: 28rpx;
  }

  .header-desc {
    font-size: 24rpx;
  }

  .map-wrapper {
    padding: 20rpx;
  }

  .scale-control {
    top: 16rpx;
    right: 16rpx;
  }

  .footer-tip {
    padding: 16rpx 20rpx;
    font-size: 24rpx;
  }
}
